# Environment Variables Template
# Copy this file to .env and update with your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/helensvale_connect

# JWT Secrets
JWT_ACCESS_SECRET=your_super_secret_jwt_access_key_here
JWT_REFRESH_SECRET=your_super_secret_jwt_refresh_key_here
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# PayNow Configuration (Zimbabwe Mobile Money)
PAYNOW_INTEGRATION_ID=your_paynow_integration_id
PAYNOW_INTEGRATION_KEY=your_paynow_integration_key
PAYNOW_RESULT_URL=https://helensvaleconnect.art/api/payments/paynow/result
PAYNOW_RETURN_URL=https://helensvaleconnect.art/payment/success

# Cookie Configuration
COOKIE_DOMAIN=helensvaleconnect.art
COOKIE_SECURE=true

# Email Service
MAILERLITE_API_KEY=your_mailerlite_api_key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@helensvaleconnect.art
FROM_NAME=Helensvale Connect

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PLATFORM_FEE_PERCENTAGE=10
VENDOR_PAYOUT_PERCENTAGE=90

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_BASE_URL=https://api.sandbox.paypal.com

# Cloud Storage
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Application URLs
FRONTEND_URL=https://helensvaleconnect.art
BACKEND_URL=https://api.helensvaleconnect.art

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Environment
NODE_ENV=production
PORT=3001

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# MailerLite Configuration (Free: 1,000 subscribers, 12,000 emails/month)
MAILERLITE_API_KEY=your_mailerlite_api_key
MAILERLITE_EARLY_ACCESS_GROUP_ID=your_early_access_group_id
MAILERLITE_APPROVED_GROUP_ID=your_approved_group_id
MAILERLITE_PENDING_PAYMENT_GROUP_ID=your_pending_payment_group_id

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Session
SESSION_SECRET=your_session_secret_here

# Currency Configuration
DEFAULT_CURRENCY=USD
CURRENCY_SYMBOL=$
CURRENCY_LOCALE=en-US

# Zimbabwe Market Configuration
MARKET_REGION=Zimbabwe
PRIMARY_LOCATION=Helensvale, Borrowdale, Harare
MOBILE_MONEY_PROVIDER=EcoCash
MOBILE_MONEY_CURRENCY=USD

# Production Domain Configuration
DOMAIN=helensvaleconnect.art
API_DOMAIN=api.helensvaleconnect.art
CDN_DOMAIN=cdn.helensvaleconnect.art

# SSL Configuration
SSL_ENABLED=true
FORCE_HTTPS=true

# CORS Configuration
CORS_ORIGIN=https://helensvaleconnect.art
CORS_CREDENTIALS=true
