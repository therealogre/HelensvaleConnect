# Database
MONGODB_URI=mongodb://localhost:27017/helensvale_connect
DB_NAME=helensvale_connect

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d

# Server
PORT=3001
NODE_ENV=development
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# MailerLite Configuration (Free: 1,000 subscribers, 12,000 emails/month)
MAILERLITE_API_KEY=your_mailerlite_api_key
MAILERLITE_EARLY_ACCESS_GROUP_ID=your_early_access_group_id
MAILERLITE_APPROVED_GROUP_ID=your_approved_group_id
MAILERLITE_PENDING_PAYMENT_GROUP_ID=your_pending_payment_group_id

# PayNow Configuration (Zimbabwe Payment Gateway)
PAYNOW_INTEGRATION_ID=your_paynow_integration_id
PAYNOW_INTEGRATION_KEY=your_paynow_integration_key
PAYNOW_RESULT_URL=http://localhost:3001/api/payments/paynow/result
PAYNOW_RETURN_URL=http://localhost:3000/payment/success

# Cloudinary Configuration (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
