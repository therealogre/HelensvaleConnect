# Production Environment Variables
# ============================
# DO NOT COMMIT THIS FILE TO VERSION CONTROL
# This file contains sensitive credentials

# Application
NODE_ENV=production
PORT=3001

# Database
MONGODB_URI=mongodb://mongo:27017/helensvale_connect_prod

# JWT Configuration
JWT_ACCESS_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_32_CHARS_LONG
JWT_REFRESH_SECRET=REPLACE_WITH_ANOTHER_SECURE_RANDOM_STRING
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# PayNow Configuration (Production)
PAYNOW_INTEGRATION_ID=21545
PAYNOW_INTEGRATION_KEY=f073cc69-4438-418f-8b30-62779a5a2cb0
PAYNOW_RESULT_URL=https://helensvaleconnect.art/api/payments/paynow/result
PAYNOW_RETURN_URL=https://helensvaleconnect.art/payment/success

# Cookie Configuration
COOKIE_DOMAIN=helensvaleconnect.art
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Email Service
SMTP_HOST=smtp.mailersend.net
SMTP_PORT=587
SMTP_USER=MS_username@mailersend.net
SMTP_PASS=REPLACE_WITH_MAILERSEND_API_KEY
FROM_EMAIL=noreply@helensvaleconnect.art
FROM_NAME="Helensvale Connect"

# Payment Processing
PLATFORM_FEE_PERCENTAGE=10
VENDOR_PAYOUT_PERCENTAGE=90

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=helensvale-connect
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Application URLs
FRONTEND_URL=https://helensvaleconnect.art
BACKEND_URL=https://api.helensvaleconnect.art
CDN_URL=https://cdn.helensvaleconnect.art

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=hc_session_2024_powerhouse_ventures_zimbabwe_marketplace_secure_production

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads

# Logging
LOG_LEVEL=info

# Currency Configuration
DEFAULT_CURRENCY=USD
CURRENCY_SYMBOL=$
CURRENCY_LOCALE=en-US

# Zimbabwe Market Configuration
MARKET_REGION=Zimbabwe
PRIMARY_LOCATION=Helensvale, Borrowdale, Harare
MOBILE_MONEY_PROVIDER=EcoCash
MOBILE_MONEY_CURRENCY=USD

# MailerLite Configuration
MAILERLITE_API_KEY=REPLACE_WITH_MAILERLITE_API_KEY
MAILERLITE_EARLY_ACCESS_GROUP_ID=REPLACE_WITH_GROUP_ID
MAILERLITE_APPROVED_GROUP_ID=REPLACE_WITH_GROUP_ID
MAILERLITE_PENDING_PAYMENT_GROUP_ID=REPLACE_WITH_GROUP_ID

# Redis Configuration (for rate limiting and caching)
REDIS_HOST=redis
REDIS_PORT=6379

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=300000

# Security Headers
CSP_HEADER="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.cloudflare.com; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' https: data:;"
XSS_PROTECTION="1; mode=block"
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin
PERMISSIONS_POLICY="camera=(), microphone=(), geolocation=()"

# CORS Configuration
CORS_ORIGIN=https://helensvaleconnect.art
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Compression
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1kb

# Request Timeout
REQUEST_TIMEOUT=30000

# PayNow Webhook
PAYNOW_WEBHOOK_SECRET=REPLACE_WITH_SECURE_WEBHOOK_SECRET

# Admin Configuration
ADMIN_EMAIL=admin@helensvaleconnect.art
ADMIN_PASSWORD=REPLACE_WITH_SECURE_ADMIN_PASSWORD

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Scheduled maintenance in progress. We'll be back shortly!"

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"  # Daily at 3 AM
BACKUP_RETENTION_DAYS=7

# Monitoring
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN
NEW_RELIC_LICENSE_KEY=REPLACE_WITH_NEW_RELIC_KEY

# Feature Flags
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PHONE_VERIFICATION=true
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_GOOGLE_LOGIN=false
FEATURE_FACEBOOK_LOGIN=false

# API Rate Limiting
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100

# Security Headers
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Content Security Policy
CSP_REPORT_URI=/api/security/csp-report

# Security Headers
EXPECT_CT_MAX_AGE=86400
EXPECT_CT_ENFORCE=true
EXPECT_CT_REPORT_URI=/api/security/ct-report

# HTTP Public Key Pinning (HPKP)
# Note: Be extremely careful with HPKP as misconfiguration can break your site
# HPKP_ENABLED=false
# HPKP_MAX_AGE=5184000
# HPKP_INCLUDE_SUBDOMAINS=true
# HPKP_REPORT_URI=/api/security/pkp-report
